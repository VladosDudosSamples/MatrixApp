<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/monthView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black_bottom_sheet"
        android:visibility="visible"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/black_bottom_sheet">

        <TextView
            android:id="@+id/mTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/tactic_round_bold"
            android:text="May"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:textColor="@color/grey"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPaymentCards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/payment_card"
        app:layout_constraintTop_toBottomOf="@+id/monthView" />

</androidx.constraintlayout.widget.ConstraintLayout>