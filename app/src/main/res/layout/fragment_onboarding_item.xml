<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content"
    android:weightSum="100"
    tools:context=".view.fragments.OnboardingItemFragment">

    <ImageView
        android:id="@+id/onboardingImage"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="24dp"
        android:scaleType="fitCenter"
        android:layout_weight="90"
        android:src="@drawable/onboarding_1"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_weight="10"
        android:textSize="16sp"
        android:text="Автоматическая смена сервера при потере связи для бесперебойного подключения"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginHorizontal="24dp"
        android:fontFamily="@font/tactic_round_bold"
        android:layout_height="wrap_content"/>

</LinearLayout>